# Browser-Use Local Bridge Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info
DEBUG=false
ENVIRONMENT=production

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=[\"*\"]

# =============================================================================
# AI/LLM PROVIDER CONFIGURATION
# =============================================================================

# Default provider and model
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4o

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=
OPENAI_ORGANIZATION=

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_PROJECT_ID=your_google_project_id

# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_BASE_URL=

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Amazon Bedrock Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# =============================================================================
# BROWSER CONFIGURATION
# =============================================================================

# Browser behavior
BROWSER_HEADLESS=true
BROWSER_USER_DATA_PERSISTENCE=true
BROWSER_USER_DATA_DIR=./browser_data
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Chrome executable path (optional, auto-detected if not set)
CHROME_EXECUTABLE_PATH=

# =============================================================================
# MEDIA AND STORAGE CONFIGURATION
# =============================================================================

# Media storage
MEDIA_DIR=./media
MAX_MEDIA_SIZE_MB=100
SCREENSHOT_QUALITY=90
ENABLE_SCREENSHOTS=true
ENABLE_RECORDINGS=false

# =============================================================================
# TASK CONFIGURATION
# =============================================================================

# Task management
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT_MINUTES=30
DEFAULT_USER_ID=default_user

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security settings
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# TELEMETRY AND MONITORING
# =============================================================================

# Telemetry and monitoring
TELEMETRY_ENABLED=false
ENABLE_METRICS=true
SENTRY_DSN=

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis for task queuing and caching (optional)
REDIS_URL=redis://localhost:6379
USE_REDIS=false

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600"